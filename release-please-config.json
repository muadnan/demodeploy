{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "go",
  "include-component-in-tag": false,
  "version-file": "./version.txt",
  "skip-github-release": true,
  "packages": {
    "demo/dns": {
      "extra-files": [
        {
          "type": "yaml",
          "path": "Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "yaml",
          "path": "Chart.yaml",
          "jsonpath": "$.version"
        }
      ],
      "release-type": "go",
      "changelog-path": "demo/CHANGELOG.md"
    },
    "demo/redis": {
      "extra-files": [
        {
          "type": "yaml",
          "path": "Chartredis.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "yaml",
          "path": "Chartredis.yaml",
          "jsonpath": "$.version"
        },
          "package.json"
      ],
      "release-type": "go",
      "changelog-path": "demo/redis/CHANGELOG.md"
    }
  }
}
